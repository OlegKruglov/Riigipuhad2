                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                IsVisible="false"/>
                <Label x:Name="lab10" Text="Sügiskülvi ja viljalõikuse lõppedes tähistatakse Setomaal peko püha."/>
                <Button x:Name="btn" Text="Loe rohkem" Clicked="btn_Clicked" HeightRequest="40"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>